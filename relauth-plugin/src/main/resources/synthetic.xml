<synthetic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.xebialabs.com/deployit/synthetic"
           xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd">

    <!--  Add a property for release authorization conditions to the environment: -->
    <type-modification type="udm.Environment">
        <property name="conditions" kind="set_of_string" required="false" category="Release Auth" 
            description="Release Authorization conditions that specify which properties on the Deployment Package are required for a deployment to this environment."/>
    </type-modification>

    <!--  Sample properties that can be added to the DeploymentPackage:

    <type-modification type="udm.DeploymentPackage">
        <property name="hasReleaseNotes" kind="boolean" default="false" category="Release Auth"/>
        <property name="isPerformanceTested" kind="boolean" default="false" category="Release Auth"/>
        <property name="hasFinalOk" kind="boolean" default="false" category="Release Auth"/>
        <property name="prodReleaseTicketNumber" kind="string" category="Release Auth"/>
    </type-modification>
    -->

</synthetic>
